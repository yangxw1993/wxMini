.box{
  display: flex;
  justify-content: flex-start;
  margin: 0 auto;
  width: 90%;
  padding: 20rpx;
  border: solid 1rpx #ccc;
  color: white;
}
.box .left{
  width: 200rpx;
  height: 500rpx;
  background: red;
}
.right{
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right view{
  width: 100%;
  height: 200rpx;
  background: #000;
}
.code{
  display: inline-block;
  padding: 10rpx;
  margin: 10rpx;
  background: #000;
  color: #fff;
}